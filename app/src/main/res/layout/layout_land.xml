<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qian">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout2"
        android:gravity="bottom">
        <TextView
            android:id="@+id/calculatorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"
            android:text="计算器"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/tv_shownumber"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_DEG"
                android:text="DEG"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_DRG"
                android:text="DRG"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_CE"
                android:text="CE"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_C"
                android:text="C"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_sin"
                android:text="sin"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_cos"
                android:text="cos"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_tan"
                android:text="tan"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_factorial"
                android:text="n!"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_1"
                android:text="1"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_2"
                android:text="2"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_3"
                android:text="3"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_divide"
                android:text="÷"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_left"
                android:text="("
                android:background="@drawable/selector"
                android:textSize="8sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_right"
                android:text=")"
                android:background="@drawable/selector"
                android:textSize="8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_4"
                android:text="4"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_5"
                android:text="5"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_6"
                android:text="6"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_multiple"
                android:text="×"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_sqrt"
                android:text="√"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_square"
                android:text="^"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_7"
                android:text="7"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_8"
                android:text="8"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_9"
                android:text="9"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_reduce"
                android:text="-"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_log"
                android:text="log"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_ln"
                android:text="ln"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="2dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_point"
                android:text="."
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_0"
                android:text="0"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_D"
                android:text="D"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_B"
                android:text="B"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_add"
                android:text="+"
                android:background="@drawable/selector"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_equal"
                android:text="="
                android:background="@drawable/selector"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>